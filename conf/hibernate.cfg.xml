<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory name="tatianium">
		<property name="show_sql">true</property>
		<mapping resource="org/hibernate/test/legacy/Simple.hbm.xml"/>
		<class-cache
			class="org.hibernate.test.legacy.Simple"
			region="Simple"
			usage="read-write"/>
		<property name="connection.url">jdbc:mysql://127.0.0.1:3306/meebox</property>
		<property name="connection.username">meebox</property>
		<property name="connection.password">meebox</property>
	</session-factory>
</hibernate-configuration>