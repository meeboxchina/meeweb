<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		
	    <!-- Database connection settings -->
		<property name="connection.driver_calss">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://127.0.0.1:3306/meebox</property>
		<property name="connection.username">meebox</property>
		<property name="connection.password">meebox</property>
		
		<!-- JDBC connection pool settings -->
		<property name="connection.pool.size">1</property>
		
		<!-- SQL dialect -->
		<property name="show_sql">true</property>
		
		<mapping resource="MFile.hbm.xml"></mapping>
		
	</session-factory>
</hibernate-configuration>